@model NewAmsterdamHospital.ViewModels.DataForMainPageView

@{
    /**/

    ViewBag.Title = "EditMainPage";
}


<div class="col-lg-6 col-md-6">
    @using (Html.BeginForm("RedactCarousel", "Admin", FormMethod.Post))
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Carousel</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Number Carousel</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.DataForCarousel.Id, ViewBag.NumberCarousel as SelectList, "Select number carousel", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Text Heading</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DataForCarousel.TextHeading, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataForCarousel.TextHeading, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Text</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.DataForCarousel.Text, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataForCarousel.Text, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Url Picture</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DataForCarousel.UrlPicture, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DataForCarousel.UrlPicture, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <a href="@Url.Action("Index","Admin")">
        <input type="submit" value="Cancel" class="btn btn-default" />
    </a>
</div>
