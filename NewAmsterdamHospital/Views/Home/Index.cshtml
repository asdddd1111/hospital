@model NewAmsterdamHospital.ViewModels.DataForMainIndex
@{
                /**/

                ViewBag.Title = "";
}

<div class="jumbotron" style="background-image:url('https://pngimage.net/wp-content/uploads/2018/06/hospital-background-images-png-1.png');background-size: cover">
    <h1>New Amsterdam Hospital</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">


                <div class="carousel-inner">
                    @foreach (var item in Model.Carousels)
                    {
                        <div class="@item.Class">
                            <img src="@item.UrlPicture" alt="Children's Health Services" style="width:100%;">
                            <div class="text-center">
                                <h2>@item.TextHeading</h2>
                                <p>
                                    @item.Text
                                </p>
                            </div>
                        </div>
                    }
                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-lg-6 col-md-6">
            <h1 style="font-weight:400;font-style: italic">NEWS</h1>
            @foreach (var item in Model.News)
            {
                <h4> @item.TextHeading</h4>
                <p>
                    @item.Text
                </p>
            }
        </div>
    </div>
</div>
