@model NewAmsterdamHospital.ViewModels.ViewModelForUserIndex

@{
    ViewBag.Title = "PersonalAccount";
}
<script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="col-lg-6 col-md-6">
    <h2>
        Personal data
    </h2>
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-10">
                Name:  @Model.DataUser.Name
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Surname:  @Model.DataUser.Surname
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Date of birth:  @Model.DataUser.DateOfBirth.ToString(("dd / MM / yyyy"))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Phone number:  @Model.DataUser.PhoneNumber
            </div>
        </div>

        <div class="left">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a href="@Url.Action("ChangePassword","User")">
                        <input type="submit" value="Change Password" class="btn btn-default" />
                    </a>
                    <a href="@Url.Action("Edit","User")">
                        <input type="submit" value="Edit Info" class="btn btn-default" />
                    </a>

                </div>
                <div class="col-md-offset-2 col-md-10">
                    
                    <a href="@Url.Action("ShowRecords","User")">
                        <input type="submit" value="Medical Records" class="btn btn-default" />
                    </a>

                </div>
            </div>

        </div>
    </div>


</div>

<div class="col-lg-6 col-md-6">

    <div id="personList">
        @Html.Partial("_appointmentPartial")
    </div>

    <div class="text-left">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("MakeAnAppointment","User")">
                    <input type="submit" value="Make an appointment" class="btn btn-default" />
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}